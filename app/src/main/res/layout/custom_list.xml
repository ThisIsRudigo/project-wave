<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/custom_comment"
        android:text="Comment"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/custom_downvote"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_thumb_down_black"/>
        <TextView
            android:id="@+id/text_downvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@string/default_score"
            android:layout_toEndOf="@id/custom_downvote"
            android:layout_toRightOf="@id/custom_downvote"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"/>


        <ImageButton
            android:layout_toRightOf="@id/text_downvote"
            android:id="@+id/custom_upvote"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="#009688"
            app:srcCompat="@drawable/ic_thumb_up_black"/>

        <TextView
            android:id="@+id/text_upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@string/default_score"
            android:layout_toEndOf="@id/custom_upvote"
            android:layout_toRightOf="@id/custom_upvote"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"/>


        <ImageButton
            android:layout_toRightOf="@id/text_upvote"
            android:id="@+id/custom_favorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="#EF5350"
            app:srcCompat="@drawable/ic_heart" />

        <TextView
            android:id="@+id/text_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@string/default_score"
            android:layout_toEndOf="@id/custom_favorite"
            android:layout_toRightOf="@id/custom_favorite"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/custom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time"
            android:layout_toEndOf="@id/text_favorite"
            android:layout_toRightOf="@id/text_favorite"/>

    </RelativeLayout>

</LinearLayout>